# Application Configuration
APP_NAME=2id8 Backend
APP_VERSION=0.1.0
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/2id8_db

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
MAX_TOKENS=2000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Development/Production Settings
# Set DEBUG=true for development
# Set LOG_LEVEL=DEBUG for more verbose logging
# Update SECRET_KEY with a secure random key for production
# Configure proper DATABASE_URL for your PostgreSQL instance
# Add your OpenAI API key for AI functionality